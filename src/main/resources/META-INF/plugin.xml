<idea-plugin>
    <id>com.github.sorinnv.codeBookmarks</id>
    <name>CodeBookmarksPlugin</name>
    <vendor>sorinnv</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Code Bookmarks" secondary = "true" anchor="left"
                    factoryClass="com.github.sorinnv.codeBookmarks.toolWindow.BookmarksToolWindowFactory"/>
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="com.github.sorinnv.codeBookmarks.gutter.BookmarksLineMarkerProvider"/>
        <projectService serviceImplementation="com.github.sorinnv.codeBookmarks.BookmarksManager"/>
    </extensions>

    <actions>
        <group id="com.github.sorinnv.codeBookmarks.CodeBookmarksGroup" text="Code Bookmarks" popup="true">
            <add-to-group group-id="GoToMenu" anchor="after"
                          relative-to-action="com.github.sorinnv.codeBookmarks.AddingBookmarkAction"/>
            <action id="com.github.sorinnv.codeBookmarks.AddingBookmarkAction"
                    class="com.github.sorinnv.codeBookmarks.AddingBookmarkAction" text="Add Code Bookmark"
                    description="Action which adds code bookmark">
                <keyboard-shortcut keymap="$default" first-keystroke="control alt A" second-keystroke="B"/>
                <mouse-shortcut keymap="$default" keystroke="control button3 doubleClick"/>
            </action>
        </group>


    </actions>
</idea-plugin>
